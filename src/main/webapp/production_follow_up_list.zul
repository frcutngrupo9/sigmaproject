<?taglib uri="/WEB-INF/tld/helper.tld" prefix="r"?>
<window title="${labels.list} ${labels.production_progress}" id="win_production_follow_up_list" apply="ar.edu.utn.sigmaproject.controller.ProductionFollowUpListController" closable="false" sclass="sigma-content">
    <panel id="productionOrderCreationBlock" border="none">
        <panelchildren>
            <vlayout>
    			<grid id="productionOrderGrid" sizedByContent="true" span="true" emptyMessage="No existen Ordenes Preparadas.">
    				<auxhead>
						<auxheader label="Ordenes Preparadas" colspan="13"/>
					</auxhead>
        			<columns>
        				<column label="Accion" align="center"/>
        				<column label="Diagrama" align="center"/>
        				<column label="${labels.production_plan}" align="center"/>
        				<column label="Foto" align="center"/>
        				<column label="${labels.product}" align="center"/>
        				<column label="Cantidad" align="center"/>
        				<column label="Inicio" align="center"/>
		                <column label="Fin" align="center"/>
		                <column label="% Completo" align="center"/>
		                <column label="Duracion Total" align="center"/>
		                <column label="Duracion Unidad" align="center"/>
		                <column label="Inicio Real" align="center"/>
		                <column label="Fin Real" align="center"/>
		            </columns>
		            <template name="model">
		                <row>
		                	<custom-attributes product_image="${r:getProductImage(each.product)}"/>
		                	<button forward="onClick=productionOrderGrid.onEditProductionOrder(${each})"  label="Abrir"/>
		                	<button forward="onClick=productionOrderGrid.onGanttProductionOrder(${each})"  label="Gantt"/>
			            	<label value="${each.productionPlan.name}"/>
			            	<cell>
				                <image if="${!empty product_image}" content="${product_image}" height="${r:getPixelScaled(product_image, 50, true)}px" width="${r:getPixelScaled(product_image, 50, false)}px"/>
				                <image if="${empty product_image}" width="0px" height="0px"/>
			                </cell>
			            	<label value="${each.product.name}"/>
			            	<label value="${each.units}"/>
		                	<label value="${r:getFormattedDateTime(each.dateStart)}"/>
		                    <label value="${r:getFormattedDateTime(each.dateFinish)}"/>
		                    <label value="${each.getPercentComplete()}"/>
		                    <label value="${r:getFormattedTime(each.getDurationTotal())}"/>
		                    <label value="${r:getFormattedTime(each.product.getDurationTotal())}"/>
		                    <label value="${r:getFormattedDateTime(each.dateStartReal)}"/>
		                    <label value="${r:getFormattedDateTime(each.dateFinishReal)}"/>
						</row>
		            </template>
    			</grid>
            </vlayout>
        </panelchildren>
    </panel>
</window>