<zscript>
boolean showProductCreation = true; 
</zscript>
<window title="Crear Producto" visible="${showProductCreation}" closable="false" apply="ar.edu.utn.sigmaproject.controller.ProductCreationController" sclass="sigma-content" id="productCreationWindow">
    <vlayout>
        <separator/>
        <hbox>
            <button id="newPieceButton" label="Agregar Nueva Pieza" onClick="pieceCreationWindow.visible=true;productCreationWindow.visible=false;"/>
            <button id="saveButton" label="Guardar"/>
        </hbox>
        <separator/>
        <grid width="400px" sclass="sigma-form">
            <columns>
                <column hflex="min" align="right"/>
                <column />
            </columns>
            <rows>
                <row>	
                    <label>Nombre:</label>
                    <textbox id="productName" value="" hflex="1" constraint="no empty"/>
                </row>
                <row>	
                    <label>Detalles:</label>
                    <textbox id="productDetails" value="" hflex="1" constraint="no empty"/>
                </row>
            </rows>
        </grid>
    </vlayout>
    <separator/>
</window>
<window title="Crear Pieza" visible="${!showProductCreation}" closable="false" apply="ar.edu.utn.sigmaproject.controller.PieceCreationController" sclass="sigma-content" id="pieceCreationWindow">
    <vlayout>
        <separator/>
        <hbox>
            <button id="goToProcessButton" label="Siguiente"/>
            <button id="cancelButton" label="Cancelar"/>
        </hbox>
        <separator/>
        <grid width="400px" sclass="sigma-form">
            <columns>
                <column hflex="min" align="right"/>
                <column />
            </columns>
            <rows>
                <row>	
                    <label>Nombre:</label>
                    <textbox id="pieceName" value="" hflex="1" constraint="no empty"/>
                </row>
                <row>	
                    <label>Longitud:</label>
                    <textbox id="pieceLongitude" value="" hflex="1" constraint="no empty"/>
                </row>
                <row>	
                    <label>Espesor:</label>
                    <textbox id="pieceLenght" value="" hflex="1" constraint="no empty"/>
                </row>
                <row>	
                    <label>Medida 1:</label>
                    <textbox id="pieceSize1" value="" hflex="1" constraint="no empty"/>
                </row>
                <row>	
                    <label>Medida 2:</label>
                    <textbox id="pieceSize2" value="" hflex="1" constraint="no empty"/>
                </row>
                <row>	
                    <label>Unidades por Producto:</label>
                    <textbox id="pieceUnitsByProduct" value="" hflex="1" constraint="no empty"/>
                </row>
                <row>	
                    <label>Pieza Conjunto?:</label>
                    <checkbox id="pieceGroup" value="" hflex="1"/>
                </row>
            </rows>
        </grid>
    </vlayout>
    <separator/>
</window>